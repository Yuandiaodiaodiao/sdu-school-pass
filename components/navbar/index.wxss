/* components/navbar/index.wxss */
.navview{
display:flex;
flex-direction: row;
}
.navbar {
  background-color: #f6f6f6;
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
}
.nav-icon{
  margin-left: 13px;
  height:100%;
  display:flex;
  align-items: center;
}
.navbar-title {
  
  z-index: 10;
  color: #333;
  font-size: 15px;
  font-weight: 500;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
